<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#EEEFF3"
    tools:context=".Math_Test">
    <TextView
        android:id="@+id/answer_text"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Ismoilov Abrorbek"
        android:fontFamily="@font/aa2"
        android:textColor="@color/black"
        android:layout_marginBottom="100dp"
        android:textSize="24sp"
        android:background="@drawable/rad1"
        />
    <TextView
        android:id="@+id/tv_quiz"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rad1"
        android:fontFamily="@font/aa2"
        android:gravity="center"
        android:text="2 * 2 ="
        android:textColor="@color/black"
        android:textSize="28sp" />
    <EditText
        android:id="@+id/tv_answer"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/rad1"
        android:fontFamily="@font/aa2"
        android:gravity="center"
        android:hint="Javobni yozing..."
        android:inputType="number"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/quiz_text"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Codial"
        android:gravity="center"
        android:background="@drawable/rad1"
        android:fontFamily="@font/aa2"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_exit"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Chiqish"
        app:cornerRadius="10dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:icon="@drawable/exit_to"
        app:iconTint="#917768"
        app:iconGravity="end"
        android:fontFamily="@font/aa2"
        app:strokeColor="#917768"
        app:strokeWidth="3dp"
        android:textSize="18sp"
        android:textColor="#917768"
        android:layout_marginTop="10dp"/>
</LinearLayout>